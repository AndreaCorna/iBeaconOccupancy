<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polimi.it.ibeaconoccupancy.LocationActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    
         <TextView
            android:id="@+id/location_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="26dp"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    <RelativeLayout
        android:id="@+id/answer_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/confirm_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no_answer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="83dp"
            android:text="@string/confirm" />

        <RadioButton
            android:id="@+id/no_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="74dp"
            android:layout_toRightOf="@+id/confirm_location"
            android:text="@string/no" />

        <RadioButton
            android:id="@+id/yes_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/confirm_location"
            android:layout_toLeftOf="@+id/confirm_location"
            android:text="@string/yes" />

    </RelativeLayout>
    
    </RelativeLayout>

</FrameLayout>
