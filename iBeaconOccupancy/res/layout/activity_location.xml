<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polimi.it.ibeaconoccupancy.LocationActivity"
    tools:ignore="MergeRootFrame"
    android:background="@drawable/back" >
	<ScrollView 
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"	>
    	<LinearLayout
    	    android:layout_width="match_parent"
    	android:layout_height="match_parent">
		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="727dp"
		        android:background="@drawable/back" >
		
		        <TextView
		            android:id="@+id/question"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentTop="true"
		            android:layout_centerHorizontal="true"
		            android:layout_marginTop="29dp"
		            android:typeface="sans"
		            android:text=""
		            android:textAppearance="?android:attr/textAppearanceLarge"
		            android:textColor="@color/white" />
		        
		         <Button
		            android:id="@+id/answer1"
		            
		            android:layout_width="200dp"
		            android:layout_height="50dp"
		            android:layout_centerInParent="true"
		            android:layout_marginTop="34dp"
		            android:background="@drawable/nice_button"
		            android:layout_below="@+id/question"
		            android:gravity="center"
		            android:shadowColor="@android:color/black"
		            android:shadowDx="1"
		            android:shadowDy="1"
		            android:shadowRadius="1"
		            android:textColor="@android:color/white"
		            android:textSize="18sp" 
		            android:onClick="checkAnswer"/>
		        
		        <Button
		            android:id="@+id/answer2"
		            android:layout_width="200dp"
		            android:layout_height="50dp"
		            android:layout_centerInParent="true"
		            android:layout_centerVertical="true"
		            android:layout_below="@+id/answer1"
		            android:layout_marginTop="37dp"
		            android:background="@drawable/nice_button"
		            android:gravity="center"
		            android:shadowColor="@android:color/black"
		            android:shadowDx="1"
		            android:shadowDy="1"
		            android:shadowRadius="1"
		            android:textColor="@android:color/white"
		            android:textSize="18sp"
		            android:onClick="checkAnswer" />
		
		        <Button
		            android:id="@+id/answer3"
		            android:layout_width="200dp"
		            android:layout_height="50dp"
		            android:layout_centerInParent="true"
		            android:layout_marginTop="40dp"
		            android:background="@drawable/nice_button"
		            android:layout_below="@+id/answer2"
		            android:gravity="center"
		            android:shadowColor="@android:color/black"
		            android:shadowDx="1"
		            android:shadowDy="1"
		            android:shadowRadius="1"
		            android:textColor="@android:color/white"
		            android:textSize="18sp"
		            android:onClick="checkAnswer" />
		
		        <Button
		            android:id="@+id/answer4"
		            android:layout_width="200dp"
		            android:layout_height="50dp"
		            android:layout_centerInParent="true"
		            android:layout_below="@+id/answer3"
		            android:layout_marginTop="43dp"
		            android:background="@drawable/nice_button"
		            android:gravity="center"
		            android:shadowColor="@android:color/black"
		            android:shadowDx="1"
		            android:shadowDy="1"
		            android:shadowRadius="1"
		            android:textColor="@android:color/white"
		            android:textSize="18sp"
		            android:onClick="checkAnswer" />
		        
		        <Button
		            android:id="@+id/answer5"
		            android:layout_width="200dp"
		            android:layout_height="50dp"
		            android:layout_centerInParent="true"
		            android:layout_below="@+id/answer4"
		            android:layout_marginTop="43dp"
		            android:background="@drawable/nice_button"
		            android:gravity="center"
		            android:shadowColor="@android:color/black"
		            android:shadowDx="1"
		            android:shadowDy="1"
		            android:shadowRadius="1"
		            android:textColor="@android:color/white"
		            android:textSize="18sp"
		            android:onClick="checkAnswer" />
		        
		        <Button
		            android:id="@+id/answer6"
		            android:layout_width="200dp"
		            android:layout_height="50dp"
		            android:layout_centerInParent="true"
		            android:layout_below="@+id/answer5"
		            android:layout_marginTop="43dp"
		            android:background="@drawable/nice_button"
		            android:gravity="center"
		            android:shadowColor="@android:color/black"
		            android:shadowDx="1"
		            android:shadowDy="1"
		            android:shadowRadius="1"
		            android:textColor="@android:color/white"
		            android:textSize="18sp"
		            android:onClick="checkAnswer" />
		        
		        <Button
		            android:id="@+id/answer7"
		            android:layout_width="200dp"
		            android:layout_height="50dp"
		            android:layout_centerInParent="true"
		            android:layout_below="@+id/answer6"
		            android:layout_marginTop="43dp"
		            android:background="@drawable/nice_button"
		            android:gravity="center"
		            android:shadowColor="@android:color/black"
		            android:shadowDx="1"
		            android:shadowDy="1"
		            android:shadowRadius="1"
		            android:textColor="@android:color/white"
		            android:textSize="18sp"
		            android:onClick="checkAnswer" />
		
		        
			</RelativeLayout>
		</LinearLayout>
	</ScrollView>

</FrameLayout>
